<div class="card" style="width: 18rem;" id="card">
    <img src="..." class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title" >Card title</h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
</div>



@section Scripts{
    <script src="~/js/travel.js"></script>


    <script>
        $("#card>img").attr("src", spots.CommonFormat.Section[2].file.img[1].text);
        $(".card-title").empty().append(spots.CommonFormat.Section[2].stitle);
        $(".card-text").empty().append(spots.CommonFormat.Section[2].xbody.substring(0,99));
        $(".btn-primary").empty().append(spots.CommonFormat.Section[2].idpt);//網址本身是掛掉的
        $(".btn-primary").attr("href",spots.CommonFormat.Section[2].xurl);
    </script>

}